<html>
    <head>
        <title>Watch Anime Together</title>
        <link rel="stylesheet" href="../../css/bootstrap.min.css">
        <link rel="stylesheet" href="../../style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <div class="loading show">
            <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
        </div>
        
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-6 d-flex justify-content-center display-column">
                    <input type="text" class="type-message" placeholder="Search for Anime">
                </div>
            </div>
            <div class="row main-show">
                <div class="col-lg-10 col-sm-12">
                    <video src="<%= animeStreamUrl %>" id="video" preload="auto" data-setup='{}' onclick="clickButton()"></video>
                    <% if(locals.isAdmin) { %>
                        <button class="player-button-mobile hidden" id="play" onclick="clickButton(this, this.value)">
                            <i class="fa-solid fa-play"></i>
                        </button>
                    <% } %>
                    <div class="player-controls">

                        <% if(locals.isAdmin) { %>
                            <button class="player-button-desktop" id="play" onclick="clickButton(this, this.value)">
                                <i class="fa-solid fa-play"></i>
                            </button>
                        <% } %>

                        <input type="range" class="player-volume" min="0" max="1" step="0.01">
                    </div>
                    <div class="skip-button">
                        <h4>Skip</h4>
                    </div>
                </div>
                <div class="col-lg-2 col-sm-12">
                    <div class="chat-box">
                        <div class="row row-90">
                            <div class="row" class="settings">

                            </div>
                        </div>
                        <div class="row row-10 d-flex justify-content-center">
                            <input type="text" class="type-message" placeholder="Type Message">
                        </div>
                    </div>
                </div>
            </div>
            <div class="anime-eps">
                <% if( locals.animeEpisodes ) { 
                    for(var i = 0; i < animeEpisodes.length; i++) {%>
                        <a class="anime-ep" value="<%= animeEpisodes[i].id %>"><%= animeEpisodes[i].number %></a>
                    <% } %>
                <% } %>
            </div>
        </div>
        <script>
            var animeShowInfo = <%- JSON.stringify(animeShowInfo) %>;
        </script>
        <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
        <script src="https://cdn.socket.io/4.5.3/socket.io.min.js" integrity="sha384-WPFUvHkB1aHA5TDSZi6xtDgkF0wXJcIIxXhC6h8OT8EH3fC5PWro5pWJ1THjcfEi" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.1.3/axios.min.js" integrity="sha512-0qU9M9jfqPw6FKkPafM3gy2CBAvUWnYVOfNPDYKVuRTel1PrciTj+a9P3loJB+j0QmN2Y0JYQmkBBS8W+mbezg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="../../js/bootstrap.min.js"></script>
        <script src="../../js/hls.min.js"></script>
        <script src="../../js/video.js"></script>
        <script src="../../js/video-player-controls.js"></script>
        <script>

        </script>
    </body>
</html>